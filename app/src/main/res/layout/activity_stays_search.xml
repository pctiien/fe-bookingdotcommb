<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bookingdotcom.ui.search_activity.StaysSearchActivity">
    <RelativeLayout
        android:id="@+id/search_container"
        android:paddingHorizontal="20dp"
        android:background="@drawable/search_full"
        android:paddingVertical="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:backgroundTint="@color/black"
            android:padding="15dp"
            android:id="@+id/back_icon"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:paddingHorizontal="10dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:hint="Enter destination"
            android:layout_toEndOf="@id/back_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/current_container"
        android:layout_marginTop="15dp"
        android:layout_below="@id/search_container"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/gps_container"
            android:padding="15dp"
            android:background="@drawable/bgblue_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:padding="15dp"
                android:background="@drawable/ic_baseline_gps_fixed_24"
                android:backgroundTint="@color/spanish_sky_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingHorizontal="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/gps_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:paddingVertical="5dp"
                android:id="@+id/txttop1"
                android:textColor="@color/spanish_sky_blue"
                android:background="@android:color/transparent"
                android:textSize="15sp"
                android:text="Around current location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:paddingVertical="5dp"
                android:layout_below="@id/txttop1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="67FW+HGJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/stay_container"
        android:layout_marginTop="15dp"
        android:layout_below="@id/current_container"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/gps_container2"
            android:padding="15dp"
            android:background="@drawable/bgblue_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:padding="15dp"
                android:background="@drawable/ic_baseline_gps_fixed_24"
                android:backgroundTint="@color/spanish_sky_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:paddingHorizontal="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/gps_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:textStyle="bold"
                android:paddingVertical="5dp"
                android:id="@+id/txttop2"
                android:textColor="@color/spanish_sky_blue"
                android:background="@android:color/transparent"
                android:textSize="15sp"
                android:text="Around current location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:paddingVertical="5dp"
                android:layout_below="@id/txttop2"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="67FW+HGJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/stay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="Continue your search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_below="@id/title1"
            android:id="@+id/continue_container"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/gps_container3"
                android:padding="15dp"
                android:background="@drawable/bgblue_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:padding="15dp"
                    android:background="@drawable/ic_baseline_restore_24"
                    android:backgroundTint="@color/spanish_sky_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:paddingHorizontal="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/gps_container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingVertical="5dp"
                    android:id="@+id/txttop3"
                    android:textSize="15sp"
                    android:text="Nha Trang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:paddingVertical="5dp"
                    android:layout_below="@id/txttop3"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="08 Aug-09 Aug, 2 adults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>